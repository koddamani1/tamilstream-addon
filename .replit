modules = ["python-3.11"]
[agent]
expertMode = true
integrations = ["web_scraper:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["libxcrypt", "xcodebuild", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TamilStream Server"

[[workflows.workflow]]
name = "TamilStream Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn api.main:app --host 0.0.0.0 --port 5000 --reload"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
